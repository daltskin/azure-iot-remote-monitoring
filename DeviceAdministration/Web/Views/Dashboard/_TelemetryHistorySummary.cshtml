@using GlobalResources
<div class="dashboard_telemetry_history_summary">
    <div id="maxDeviceHeartRateContainer" class="dashboard_telemetry_history_summary__dashboard_telemetry_history_gauge dashboard_telemetry_history_gauge--leftGauge">
        <h5 class="telemetry_summary_gauge_control__gauge_header" id="maxDeviceHeartRateLabel">@Strings.MaxOfDevicesHeartRate</h5>
        <div id="maxDeviceheartrate" class="dashboard_telemetry_history_gauge__telemetry_summary_gauge_control"></div>
    </div><div id="minDeviceHeartRateContainer" class="dashboard_telemetry_history_summary__dashboard_telemetry_history_gauge dashboard_telemetry_history_gauge--centerGauge">
              <h5 class="telemetry_summary_gauge_control__gauge_header" id="maxDeviceHeartRateLabel">@Strings.MinOfDevicesHeartRate</h5>
        <div id="minDeviceHeartRate" class="dashboard_telemetry_hHeartRateistory_gauge__telemetry_summary_gauge_control"></div>
    </div>
    <div id="avgDeviceHeartRateContainer" class="dashboard_telemetry_history_summary__dashboard_telemetry_history_gauge dashboard_telemetry_history_gauge--rightGauge">
        <h5 class="telemetry_summary_gauge_control__gauge_header" id="avgDeviceHeartRateLabel">@Strings.AverageOfDeviceHeartRate</h5>
        <div id="averageDeviceHeartRate" class="dashboard_telemetry_history_gauge__telemetry_summary_gauge_control"></div>
    </div>
</div>
<script src="~/Scripts/Views/Dashboard/TelemetryHistorySummary.js"></script>
<script>

    (function () {
        'use strict';

        var telemetryHistorySummarySettings = {
            averageDeviceHeartRateContainer: $('#avgDeviceHeartRateContainer'),
            averageDeviceHeartRateControl: $('#averageDeviceHeartRate'),
            averageDeviceHeartRateLabel: $('#avgDeviceHeartRateLabel'),
            gaugeMaxValue: 100,
            gaugeMinValue: 0,
            maxDeviceHeartRateContainer: $('#maxDeviceHeartRateContainer'),
            maxDeviceHeartRateControl: $('#maxDeviceheartrate'),
            maxDeviceHeartRateLabel: $('#maxDeviceHeartRateLabel'),
            minDeviceHeartRateContainer: $('#minDeviceHeartRateContainer'),
            minDeviceHeartRateControl: $('#minDeviceHeartRate'),
            minDeviceHeartRateLabel: $('#maxDeviceHeartRateLabel')
        };

        IoTApp.Dashboard.TelemetryHistorySummary.init(telemetryHistorySummarySettings);

        IoTApp.Dashboard.TelemetryHistorySummary.resizeTelemetryHistorySummaryGuages();

        $(window).resize(
            function () {
                IoTApp.Dashboard.TelemetryHistorySummary.resizeTelemetryHistorySummaryGuages();
            });

    })();
</script>
